<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="001" author="app-init">
        <!-- Create employee table based on the provided entity -->
        <createTable tableName="employees">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="supervisor_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="employee_role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="employee_status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="registration_date" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>

        <!-- Add foreign key constraint for self-reference (supervisor) -->
        <addForeignKeyConstraint baseTableName="employees"
                                 baseColumnNames="supervisor_id"
                                 constraintName="fk_employee_supervisor"
                                 referencedTableName="employees"
                                 referencedColumnNames="id"
                                 deferrable="true"
                                 initiallyDeferred="true"/>

        <!-- Create employee_credentials table -->
        <createTable tableName="employee_credentials">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="employee_id" type="BIGINT">
                <constraints nullable="false" unique="true" foreignKeyName="fk_credentials_employee"
                             references="employees(id)"/>
            </column>
            <column name="password_hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_password_change" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="true"/>
            </column>
            <column name="reset_token" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="reset_token_expiry" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="true"/>
            </column>
            <column name="failed_attempt" type="INT" defaultValue="0">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <!-- Create employee_contact_details table -->
        <createTable tableName="employee_contact_details">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="employee_id" type="BIGINT">
                <constraints nullable="false" unique="true" foreignKeyName="fk_contact_details_employee"
                             references="employees(id)"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="city" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="postal_code" type="VARCHAR(20)">
                <constraints nullable="true"/>
            </column>
            <column name="country" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="edit_date" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <!-- Create indexes -->
        <createIndex tableName="employees" indexName="idx_employee_supervisor">
            <column name="supervisor_id"/>
        </createIndex>

        <createIndex tableName="employees" indexName="idx_employee_status">
            <column name="employee_status"/>
        </createIndex>

        <createIndex tableName="employees" indexName="idx_employee_role">
            <column name="employee_role"/>
        </createIndex>

        <createIndex tableName="employee_contact_details" indexName="idx_employee_contact_email">
            <column name="email"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>